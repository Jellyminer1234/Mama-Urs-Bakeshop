<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="469.0" prefWidth="669.0" style="-fx-background-color: beige;"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.bakery.OptionsController">
   <children>
      <VBox alignment="CENTER" layoutX="135.0" layoutY="30.0" prefWidth="400.0" spacing="20.0">
         <!-- Title Label -->
         <HBox alignment="CENTER">
            <Label text="OPTIONS">
               <font>
                  <Font size="34.0" />
               </font>
            </Label>
         </HBox>

         <!-- Buttons Group -->
         <VBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleSales" prefWidth="250.0" text="SALES" />
            <Button onAction="#handleStocks" prefWidth="250.0" text="STOCKS" />
            <Button onAction="#handleSuppliers" prefWidth="250.0" text="SUPPLIERS" />
            <Button onAction="#handleReports" prefWidth="250.0" text="REPORTS" />
            <Button onAction="#handleEmployees" prefWidth="250.0" text="EMPLOYEES" />
            <Button onAction="#handleLogout" prefWidth="250.0" text="LOGOUT" />
         </VBox>

         <!-- Back Button -->
         <HBox alignment="CENTER">
            <Button onAction="#handleBack" prefWidth="150.0" text="BACK" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>
